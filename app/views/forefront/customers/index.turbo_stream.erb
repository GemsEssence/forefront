<%= turbo_stream.replace "customers_list" do %>
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <% if @customers.any? %>
      <ul class="divide-y divide-gray-200">
        <%= render @customers %>
      </ul>
      <div class="px-4 py-3 border-t border-gray-200">
        <%= paginate @customers, params: { turbo_frame: "customers_list" } %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No customers found.</p>
        <%= link_to "Create your first customer", new_customer_path, class: "mt-4 inline-block text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>
<% end %>

