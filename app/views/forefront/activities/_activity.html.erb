<% activity = local_assigns[:activity] %>
<% index = local_assigns[:index] || 0 %>
<% total = local_assigns[:total] || 1 %>

<li>
  <div class="relative pb-8">
    <% unless index == total - 1 %>
      <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
    <% end %>
    <div class="relative flex items-start space-x-3">
      <div class="relative">
        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
          <span class="text-indigo-600 font-medium text-sm"><%= activity.created_by.name.first.upcase %></span>
        </div>
      </div>
      <div class="min-w-0 flex-1">
        <div>
          <div class="text-sm">
            <span class="font-medium text-gray-900"><%= activity.created_by.name %></span>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
              <%= activity.comment? ? 'bg-blue-100 text-blue-800' : 
                  activity.remark? ? 'bg-yellow-100 text-yellow-800' :
                  activity.next_step? ? 'bg-green-100 text-green-800' :
                  'bg-gray-100 text-gray-800' %>">
              <%= activity.activity_type.humanize %>
            </span>
          </div>
          <p class="mt-0.5 text-sm text-gray-500">
            <%= time_ago_in_words(activity.created_at) %> ago
          </p>
        </div>
        <div class="mt-2 text-sm text-gray-700">
          <%= simple_format(activity.body) %>
        </div>
      </div>
    </div>
  </div>
</li>

