<% actable = local_assigns[:actable] %>
<% activity = local_assigns[:activity] || Forefront::Activity.new %>
<% error = local_assigns[:error] %>
<% actable_path = actable.is_a?(Forefront::Ticket) ? ticket_activities_path(actable) : lead_activities_path(actable) %>

<% if can_create_activity?(actable) %>
  <div id="activity_form_<%= actable.id %>" class="mt-8 bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Add Activity</h3>
      
      <% if error.present? %>
        <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= error %></span>
        </div>
      <% end %>

      <% if activity.errors.any? %>
        <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded relative" role="alert">
          <h4 class="font-bold mb-2">Please fix the following errors:</h4>
          <ul class="list-disc list-inside">
            <% activity.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with url: actable_path, class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
        <div>
          <%= f.label :activity_type, "Activity Type", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :"activity[activity_type]", 
              options_for_select([
                ['Comment', 'comment'],
                ['Remark', 'remark'],
                ['Next Step', 'next_step'],
                ['Internal Note', 'internal_note']
              ], activity.activity_type || 'comment'), 
              {}, 
              { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
        </div>

        <div>
          <%= f.label :body, "Content", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :"activity[body]", rows: 4, 
              value: activity.body,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 #{'border-red-300' if activity.errors[:body].any?}", 
              placeholder: "Enter your comment, remark, next step, or internal note...",
              required: true %>
          <% if activity.errors[:body].any? %>
            <p class="mt-1 text-sm text-red-600"><%= activity.errors[:body].first %></p>
          <% end %>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Add Activity", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

