<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900"><%= @ticket.title %></h1>
        <div class="flex space-x-2">
          <% if policy(@ticket).update? %>
            <%= link_to "Edit", edit_ticket_path(@ticket), class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          <% end %>
          <% if policy(@ticket).destroy? %>
            <%= button_to "Delete", ticket_path(@ticket), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          <% end %>
          <%= link_to "Back", tickets_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>

      <div id="flash_messages">
        <%= render "forefront/shared/messages" %>
      </div>

      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <div class="flex items-center space-x-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-<%= @ticket.priority == 'critical' ? 'red' : @ticket.priority == 'high' ? 'orange' : @ticket.priority == 'medium' ? 'yellow' : 'gray' %>-100 text-<%= @ticket.priority == 'critical' ? 'red' : @ticket.priority == 'high' ? 'orange' : @ticket.priority == 'medium' ? 'yellow' : 'gray' %>-800">
              <%= @ticket.priority.humanize %> Priority
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <%= @ticket.status.humanize %>
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
              <%= @ticket.category.humanize %>
            </span>
          </div>
        </div>
        <div class="border-t border-gray-200">
          <dl>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= simple_format(@ticket.description) %></dd>
            </div>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Customer</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= link_to @ticket.customer.name, customer_path(@ticket.customer), class: "text-indigo-600 hover:text-indigo-500" %>
              </dd>
            </div>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Created By</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @ticket.created_by.name %></dd>
            </div>
            <% if @ticket.assigned_to.present? %>
              <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Assigned To</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @ticket.assigned_to.name %></dd>
              </div>
            <% end %>
            <% if @ticket.due_at.present? %>
              <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Due Date</dt>
                <dd class="mt-1 text-sm <%= @ticket.overdue? ? 'text-red-600 font-semibold' : @ticket.due_soon? ? 'text-orange-600' : 'text-gray-900' %> sm:mt-0 sm:col-span-2">
                  <%= @ticket.due_at.strftime("%B %d, %Y") %>
                  <% if @ticket.overdue? %>
                    <span class="ml-2 text-red-600">(Overdue)</span>
                  <% elsif @ticket.due_soon? %>
                    <span class="ml-2 text-orange-600">(Due Soon)</span>
                  <% end %>
                </dd>
              </div>
            <% end %>
            <% if @ticket.next_followup_at.present? %>
              <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Next Follow-up</dt>
                <dd class="mt-1 text-sm <%= @ticket.needs_followup? ? 'text-orange-600 font-semibold' : 'text-gray-900' %> sm:mt-0 sm:col-span-2">
                  <%= @ticket.next_followup_at.strftime("%B %d, %Y at %I:%M %p") %>
                  <% if @ticket.needs_followup? %>
                    <span class="ml-2 text-orange-600">(Needs Follow-up)</span>
                  <% end %>
                </dd>
              </div>
            <% end %>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Created At</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @ticket.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
            </div>
          </dl>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <h2 class="text-lg font-medium text-gray-900">Assignment</h2>
        <% if policy(@ticket).change_assignee? %>
          <div>
            <button type="button" onclick="openAssignmentModal('<%= "assignment_modal_#{@ticket.class.name.demodulize.underscore}_#{@ticket.id}" %>')" class="bg-indigo-600 text-white px-3 py-1 rounded text-sm">Change Assignee</button>
          </div>
        <% end %>
      </div>

      <div class="mt-2">
        <!-- history is shown in the Activities tab; modal form is included here for the show page -->
        <%= render 'forefront/assignments/form', assignable: @ticket, admins: @admins %>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <h2 class="text-lg font-medium text-gray-900">Status</h2>
        <% if policy(@ticket).update? %>
          <div>
            <button type="button" onclick="openStatusHistoryModal('<%= "status_history_modal_#{@ticket.class.name.demodulize.underscore}_#{@ticket.id}" %>')" class="bg-indigo-600 text-white px-3 py-1 rounded text-sm">Change Status</button>
          </div>
        <% end %>
      </div>

      <div class="mt-2">
        <!-- status history form modal -->
        <%= render 'forefront/status_histories/form', trackable: @ticket %>
      </div>

      <!-- Activity Form -->
      <%= render "forefront/activities/form", actable: @ticket %>

      <!-- Activities List -->
      <%= render "forefront/activities/list", activities: @activities, actable: @ticket %>
    </div>
  </div>
</div>


