<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Tickets</h1>
        <%= link_to "New Ticket", new_ticket_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      </div>

      <%= render "forefront/shared/messages" %>

      <!-- Filters -->
      <%= render 'filter_form' %>

      <!-- Tickets Table -->
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <% if @tickets.any? %>
          <ul class="divide-y divide-gray-200">
            <%= render @tickets %>
          </ul>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500">No tickets found.</p>
            <%= link_to "Create your first ticket", new_ticket_path, class: "mt-4 inline-block text-indigo-600 hover:text-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

