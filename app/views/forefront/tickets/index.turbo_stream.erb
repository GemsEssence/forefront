<%= turbo_stream.replace "tickets_list" do %>
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <% if @tickets.any? %>
      <ul class="divide-y divide-gray-200">
        <%= render @tickets %>
      </ul>
      <div class="px-4 py-3 border-t border-gray-200">
        <%= paginate @tickets, params: { turbo_frame: "tickets_list" } %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No tickets found.</p>
        <%= link_to "Create your first ticket", new_ticket_path, class: "mt-4 inline-block text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>
<% end %>

